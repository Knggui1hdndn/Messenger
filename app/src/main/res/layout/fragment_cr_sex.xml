<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Giới tính của bạn là gì?"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:gravity="start"
        android:text="Về sau bạn có thể thay đổi những ai có thể nhìn thấy giới tính của mình trên trang cá nhân"
        android:textSize="15dp" />

    <RadioGroup
        android:id="@+id/rdiGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdiNam"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:checked="true"
            android:gravity="start|center_vertical"
            android:paddingLeft="25dp"
            android:text="Nam"
            android:textAllCaps="false" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#AEA1A1" />

        <RadioButton
            android:id="@+id/rdiNu"

            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start|center_vertical"
            android:paddingLeft="25dp"
            android:text="Nữ"
            android:textAllCaps="false" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#AEA1A1" />
    </RadioGroup>
    <EditText
        android:id="@+id/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="9dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:foreground="?attr/selectableItemBackground"
            android:text="Tiếp"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>
</LinearLayout>